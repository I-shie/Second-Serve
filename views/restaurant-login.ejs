</head>
<body>
  <nav class="navbar navbar-expand-sm bg-light">
  <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/images/logo.png" alt="Logo" width="40" height="40" class="d-inline-block align-text-top">
        </a>
        <div class="d-flex justify-content-end">
            <ul class="navbar-nav">
                
                
            </ul>
        </div>

    </div>
</nav>



<div class="login" style="display: block;">
  <div class="text-center py-5 d-flex flex-column align-items-center" style="min-height: 80vh; background-color: #00bf63;">
    <div class="d-flex flex-column justify-content-center gap-4 mt-5">

      <div class="bg-white p-4 rounded-4 shadow mx-auto" style="width: 350px;">
        <h4 class="fw-bold mb-4" style="color:#00bf63">Login</h4>
        <form action="/restaurantLogin" method="POST">
          <input name="email" placeholder="Restaurant Email" type="email" class="form-control mb-3" required>
          <input name="password" type="password" placeholder="Password" class="form-control mb-3" required>
          <button type="submit" class="btn rounded-pill w-100" style="background-color: #00bf63; color: #fff;">Submit</button>
        </form>
      </div>
<div class="bg-white p-4 rounded-4 shadow mx-auto" style="width: 350px;">
      <button onclick="open_register()" class="btn rounded-pill mt-3 px-4" style="background-color: #00bf63; color:#fff;">Register</button>

    </div>


    </div>
  </div>
</div>






<div class="register" style="display: none;">
  <div class="text-center py-5 d-flex flex-column align-items-center" style="min-height: 80vh; background-color: #00bf63;">
    <div class="d-flex flex-column justify-content-center gap-4 mt-5">

      <div class="bg-white p-4 rounded-4 shadow mx-auto" style="width: 350px;">
        <h4 class="fw-bold mb-4" style="color:#00bf63">Registration</h4>
        <form action="/restaurantRegister" method="POST">
          <input name="rName" placeholder="Restaurant Name" class="form-control mb-3" required>
          <select onchange="print_city('state', this.selectedIndex);" id="sts" name ="stt" class="form-control mb-3" required></select>
          <select id ="state" class="form-control mb-3" name="city" required></select>
          <script language="javascript">print_state("sts");</script>
          <input name="rAddress" placeholder="Address" class="form-control mb-3" required>
          <input name="rContact" placeholder="Contact No" class="form-control mb-3" required>
          <input name="rEmail" placeholder="Restaurant Email Address" class="form-control mb-3" required>
          <input name="rPassword" type="password" placeholder="Password" class="form-control mb-3" required>
          <button type="submit" class="btn rounded-pill w-100" style="background-color: #00bf63; color: #fff;">Submit</button>
        </form>
      </div>

      <div class="bg-white p-4 rounded-4 shadow mx-auto" style="width: 350px;">
        <button onclick="open_login()" class="btn rounded-pill mt-3 px-4" style="background-color: #00bf63; color:#fff;">Login</button>
      </div>

    </div>
  </div>
</div>
<%- include('footer'); -%>

</body>
</html>
